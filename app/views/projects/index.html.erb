<div class="row">
<h1>Proyectos</h1>

<table>
  <thead>
    <tr>
      <th>Título</th>

      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td><%= project.title %></td>

        <td><%= link_to 'Ver', project %></td>
        <td><%= link_to 'Editar', edit_project_path(project) %></td>
        <td><%= link_to 'Eliminar', project, method: :delete, data: { confirm: '¿Está seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


<%= button_to '+ Agregar proyecto', new_project_path, :method => "GET", :class => "button small" %>
</div>