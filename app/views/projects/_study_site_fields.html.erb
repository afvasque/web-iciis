<div class="nested-fields">
  
    <div class="row">
      <div class="large-12 columns">
        <%= f.input :name, :placeholder => "Descripción del lugar, ej: 'Museo'." %>
      </div>
    </div>

    <div class="row">
      <div class="large-12 columns">
        <%= f.input :location, :placeholder => "Nombre de la localidad o zona administrativa." %>
      </div>
    </div>

  <div class="row">
    <div class="large-6 columns">
      <%= f.input :latitude, :placeholder => "Coordenadas geográficas del sitio de estudio en formato decimal." %>
    </div>

    <div class="large-6 columns">
      <%= f.input :longitude,  :placeholder => "Coordenadas geográficas del sitio de estudio en formato decimal." %>
    </div>
  </div>

  <div class="row">
      <div class="small-12 columns">
        <%= link_to_remove_association "Eliminar sitio de estudio", f, :class=>"tiny alert button"%>
      </div>
  </div>

</div>