  <head>
  	<meta charset="utf-8" />

  	<!-- Uncomment to make IE8 render like IE7 -->
  	<!-- <meta http-equiv="X-UA-Compatible" content="IE=7" /> -->

  	<!-- Set the viewport width to device width for mobile -->
  	<meta name="viewport" content="width=device-width, initial-scale=1.0" />

  	<title><%= content_for?(:title) ? yield(:title) : "Proyectos ICIIS" %></title>

  	<%= stylesheet_link_tag    "application" %>
    <%= csrf_meta_tags %>
  </head>

  <body>

<div class="wrapper">
  <nav class="top-bar" data-topbar>
    <ul class="title-area">
      <li class="name">
        <h1><%=link_to "Localizador de Proyectos ICIIS", :root %></h1>
      </li>
    </ul>

    <section class="top-bar-section">
      <!-- Right Nav Section -->
      <ul class="right">
        <% if signed_in? %>
        <li class="has-dropdown">
          <%= link_to "Gestión de Proyectos", :projects %>
          <ul class="dropdown">
            <li><%= link_to "Agregar proyecto", new_project_path %></li>
            <li><%= link_to "Ver todos", :projects %></li>
          </ul>
        </li>
        <li class="has-dropdown">
          <%= link_to "Gestión de Usuarios", :users %>
          <ul class="dropdown">
            <li><%= link_to "Agregar usuario", new_user_path %></li>
            <li><%= link_to "Ver todos", :users %></li>
          </ul>
        </li>
                <li class="active"><%= link_to "Cerrar sesión", signout_path, method: "delete" %> </li>
              <% else %>
         <li class="active"> <%= link_to "Login", :signin %> </li>
        <% end %>
      </ul>

      <!-- Left Nav Section
      <ul class="left">
        <li><a href="#">Left Nav Button</a></li>
      </ul>-->
    </section>
  </nav>

      <%= yield %>
      <%= yield :scripts %>

  </div>


    <%= javascript_include_tag "application" %>

  </body>
</html>
